<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/texto1_nuevaCita3"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/manrope_bold"
        android:gravity="center"
        android:text="Nueva cita"
        android:textColor="#0F0E0E"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imaBoton1_nuevaCita3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="BotÃ³n para regresar a la pantalla anterior"
            android:scaleType="centerInside"
            android:src="@drawable/flechaizd" />
    </FrameLayout>

    <TextView
        android:id="@+id/texto2_nuevaCita3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/manrope_bold"
        android:text="Seleccione una fecha"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto1_nuevaCita3" />


    <TextView
        android:id="@+id/texto4_nuevaCita3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/manrope_bold"
        android:text="Seleccione una hora"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_nuevaCita3" />

    <GridLayout
        android:id="@+id/gridHoras_nuevaCita3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:padding="16dp"
        android:rowCount="4"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@+id/texto4_nuevaCita3"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/botonHoras1_nuevaCita3"
            style="@style/HoraBoton"
            android:text="09:00" />

        <Button
            android:id="@+id/botonHoras2_nuevaCita3"
            style="@style/HoraBoton"
            android:text="09:30" />

        <Button
            android:id="@+id/botonHoras3_nuevaCita3"
            style="@style/HoraBoton"
            android:text="10:00" />

        <Button
            android:id="@+id/botonHoras4_nuevaCita3"
            style="@style/HoraBoton"
            android:text="10:30" />

        <Button
            android:id="@+id/botonHoras5_nuevaCita3"
            style="@style/HoraBoton"
            android:text="11:00" />

        <Button
            android:id="@+id/botonHoras6_nuevaCita3"
            style="@style/HoraBoton"
            android:text="11:30" />

        <Button
            android:id="@+id/botonHoras7_nuevaCita3"
            style="@style/HoraBoton"
            android:text="12:00" />

        <Button
            android:id="@+id/botonHoras8_nuevaCita3"
            style="@style/HoraBoton"
            android:text="12:30" />

        <Button
            android:id="@+id/botonHoras9_nuevaCita3"
            style="@style/HoraBoton"
            android:text="13:00" />
        <Button
            android:id="@+id/botonHoras10_nuevaCita3"
            style="@style/HoraBoton"
            android:text="13:30" />
        <Button
            android:id="@+id/botonHoras11_nuevaCita3"
            style="@style/HoraBoton"
            android:text="14:00" />
        <Button
            android:id="@+id/botonHoras12_nuevaCita3"
            style="@style/HoraBoton"
            android:text="14:30" />



    </GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout_nuevaCita3"
        android:layout_width="412dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto2_nuevaCita3">

        <Button
            android:id="@+id/boton1_nuevaCita3"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Abrir calendario"
            android:backgroundTint="@color/verde"/>

        <TextView
            android:id="@+id/texto3_nuevaCita3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:text="Fecha: --/--/----" />
    </LinearLayout>

    <Button
        android:id="@+id/boton2_nuevaCita3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Reservar Cita"
        android:backgroundTint="@color/verde"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridHoras_nuevaCita3" />


</androidx.constraintlayout.widget.ConstraintLayout>
